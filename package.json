{
  "name": "chex-garage",
  "private": true,
  "packageManager": "bun@1.3.2",
  "workspaces": ["extensions/*", "packages/*"],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "fmt": "turbo run fmt",
    "fmt:check": "turbo run fmt:check",
    "typecheck": "turbo run typecheck",
    "changeset": "changeset",
    "version": "changeset version && bun run sync-manifest",
    "sync-manifest": "bun scripts/sync-manifest.ts",
    "release": "bun run version && changeset tag"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.36.0",
    "turbo": "^2.3.0",
    "typescript": "^5"
  }
}

{
  "name": "chex-garage",
  "private": true,
  "workspaces": [
    "extensions/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "fmt": "oxfmt --write .",
    "fmt:check": "oxfmt --check .",
    "typecheck": "tsc --build --noEmit",
    "changeset": "changeset",
    "version": "changeset version && bun run sync-manifest",
    "sync-manifest": "bun scripts/sync-manifest.ts",
    "release": "bun run version && changeset tag && bun scripts/push-tags.ts"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@types/bun": "1.3.5",
    "@typescript-eslint/eslint-plugin": "8.51.0",
    "chrome-types": "0.1.403",
    "oxfmt": "0.21.0",
    "oxlint": "1.36.0",
    "oxlint-tsgolint": "0.10.0",
    "sharp": "0.34.5",
    "turbo": "2.7.2",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "packageManager": "bun@1.3.5"
}
